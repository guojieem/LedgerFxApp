<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ledgerfx.ui.controller.RecordBillController"
      styleClass="content-pane"
      spacing="15">

    <Label text="新增账单" styleClass="title"/>

    <HBox spacing="10">
        <Label text="金额:"/>
        <TextField fx:id="amountField"/>
    </HBox>

    <HBox spacing="10">
        <Label text="分类:"/>
        <TextField fx:id="categoryField"/>
    </HBox>

    <HBox spacing="10">
        <Label text="备注:"/>
        <TextField fx:id="remarkField"/>
    </HBox>

    <Button fx:id="saveBtn" text="保存"/>
</VBox>
