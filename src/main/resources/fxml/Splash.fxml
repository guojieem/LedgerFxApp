<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.ledgerfx.ui.controller.SplashController"
           style="-fx-background-color: #2c3e50;">
    <VBox spacing="20" alignment="CENTER">
        <ImageView fitWidth="120" preserveRatio="true">
            <Image url="@/icons/logo.png"/>
        </ImageView>

        <Label text="LedgerFxApp" style="-fx-text-fill:white; -fx-font-size:22; -fx-font-weight:bold;"/>
        <ProgressBar fx:id="progressBar" prefWidth="250"/>
        <Label fx:id="progressLabel" text="Loading..." style="-fx-text-fill:white;"/>
    </VBox>
</StackPane>

